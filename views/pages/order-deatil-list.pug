extends ../includes/layout-main
block content
  main.ml-sm-auto.px-md-4(role='main')

    include ./../includes/layout-entry-header

    section.content.my-2
      .row
        .col-md-12
          .card
            .card-header
              h4.card-title Customer Information 

            .card-body(style="overflow-x:auto;")
              table.table.table-md.table-striped.table-valign-middle(style="margin: -1px auto")
                thead
                  tr
                tbody
                  tr
                    td Name
                    td 
                    td 
                    td #{data.customerId.displayName}
                  tr
                    td Phone
                    td 
                    td 
                    td #{data.customerId.email}
                  tr
                    td Address
                    td 
                    td 
                    td #{data.customerId.address[4]} - #{data.customerId.address[5]}

    section.content.my-4(style="")
      .row
        .col-md-12
          .card
            .card-body(style="overflow-x:auto;")
              table.table.table-md.table-bordered.table-striped(style="margin: -1px auto")
                thead
                  tr  
                    th(style="text-align:center; width: 5%") #
                    th(style="text-align:center; width: 20%") Product Name
                    th(style="text-align:center; width: 20%") Product Category
                    th(style="text-align:center; width: 10%") Price
                    th(style="text-align:center; width: 5%") Quantity
                    th(style="text-align:center; width: 10%") Discount Price
                    th(style="text-align:center; width: 10%") Amount
                tbody
                  each item, i in data.orderItem
                    tr  
                      td(style="text-align:center") #{i + 1}
                      td(style="text-align:center") #{item.productId.name}
                      td(style="text-align:center") #{item.productId.category_id.name}
                      td(style="text-align:right")  #{item.price}
                      td(style="text-align:center") #{item.quantity}
                      td(style="text-align:right")  #{item.discount_price}
                      td(style="text-align:right")  #{(item.price-item.discount_price) * item.quantity}
                tfoot
                  tr  
                    td
                    td 
                    td 
                    td 
                    td
                    td(style="text-align:right")
                      b Total
                    td(style="text-align:right") #{data.total}

    