extends ../includes/layout-main
block content
  main.ml-sm-auto.px-md-4(role='main')
    include ./../includes/layout-entry-header
    form#uploadForm(method='POST' action='/file/upload/banners' enctype="multipart/form-data")
      input#file-input(type='file' name='uploaded_file')
    include ./../includes/layout-entry-form
      block inputs

        div.form-group.row
          div.col-sm-6.mb-2
            label.control-label(for='name') Name
            input.form-control.input-sm#name(type='text', name='name', value=data.name, maxlength="55" required )
          
          div.col-sm-6.mb-2
            label.control-label(for='payment_role') Payment Role
            select#payment_role.selectpicker.form-control(name='payment_role', value=data.payment_role, data-value=data.payment_role data-size="8" data-live-search="true" required)
              option(value="" disabled)  -- Please Select --
              option(value="pay" selected) Pay
              option(value="bank") Bank
              option(value="other") Other

        div.form-group.row
          div.col-sm-6.mb-2
            label.control-label(for='organization') Organization
            input.form-control.input-sm#organization(type='text', name='organization', value=data.organization, maxlength="55" required )
          div.col-sm-6.mb-2
            label.control-label(for='status') Status
            div.radio.radio-toolbar.row
              div.col-sm-6.mb-2.col-xl-3
                input#statusActive.radiobox(type='radio', name='status', value="1" checked)
                label.ml-1(for='statusActive') &nbsp; Active
              div.col-sm-6.mb-2.col-xl-3
                input#statusInactive.radiobox(type='radio', name='status', value="0")
                label.ml-1(for='statusInactive') &nbsp; Inactive
        
        div.form-group.row
          div.col-sm-6.mb-2
            label.control-label(for='description') Description
            textarea.form-control.input-sm#description(name='description')= data.description

        include ./../includes/layout-entry-btn

    form#postSuccessForm(method='GET', action=page.list.url)
  script.
    $(document).ready(function() {
      var token = '!{token}';
      var maxImageCount  = 1;
      var editMode = $("input[name='id']").val();
      $('#alert').hide();
      $('#uploadForm').hide();

      var status = "!{data.status}";
      if (status && status == "false")
        $('#statusInactive').attr("checked", "checked");

      if (editMode && typeof editMode === "string") {
        var payment_role = $('#payment_role').data('value');
        $('#payment_role').val(payment_role).change();
      }

      $('#entryForm').submit(function (e) {
        e.preventDefault();
        $.ajax({
          url: $(this).attr('action'),
          type:$(this).attr('method'),
          data: $(this).serialize(),
          success: function (data) {
            handleAlert(data);
          },
          error: function (data) {
            console.log('An error occurred.');
            console.log(data);
          },
        });
      });

    });