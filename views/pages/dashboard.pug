      .col-lg-12.my-5
        .panel.panel-default
          .panel-heading
            h3.panel-title Polar Chart
          .panel-content.text-center
            canvas#polarChart.chart(height='380')
          .panel-footer A sample Polar Chart with basic settings


      .col-lg-12.my-5
        .panel.panel-default
          .panel-heading
            h3.panel-title Single Bar Chart
          .panel-content.text-center
            canvas#singelBarChart.chart(height='380')
          .panel-footer A sample Single Bar Chart with basic settings

  script(src='/layout-js/lib/chart-js/chart.bundle.js')
