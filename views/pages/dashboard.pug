extends ../includes/layout-main
block content
  main.ml-sm-auto.px-md-4(role='main')
    div.my-3
      h3.h3 Dashboard

    .row
      .col-md-3
        .card-counter.primary
          i.fa.fa-user-friends
          span.count-numbers 9999
          span.count-name Customers
      .col-md-3
        .card-counter.danger
          i.fa.fa-user-tie
          span.count-numbers 99
          span.count-name Suppliers
      .col-md-3
        .card-counter.success
          i.fa.fa-cube
          span.count-numbers 7500
          span.count-name Products
      .col-md-3
        .card-counter.info
          i.fa.fa-clipboard-list
          span.count-numbers 100
          span.count-name Orders

    div
      .col-lg-12.my-5.text-center
        h2 Charting with Chartjs

      .col-lg-12.my-5
        .panel.panel-default
          .panel-heading
            h3.panel-title Line Chart
          .panel-content.text-center
            canvas#teamChart.chart(height='380')
          .panel-footer A simple Line Chart with basic settings

      .col-lg-12.my-5
        .panel.panel-default
          .panel-heading
            h3.panel-title Sale Chart
          .panel-content.text-center
            canvas#saleChart.chart(height='380')
          .panel-footer A sample Sale Chart with basic settings

      .col-lg-12.my-5
        .panel.panel-default
          .panel-heading
            h3.panel-title Line Chart
          .panel-content.text-center
            canvas#lineChart.chart(height='380')
          .panel-footer A sample Line Chart with basic settings

      .col-lg-12.my-5
        .panel.panel-default
          .panel-heading
            h3.panel-title Bar Chart
          .panel-content.text-center
            canvas#barChart.chart(height='380')
          .panel-footer A sample Bar Chart with basic settings
      
      .col-lg-12.my-5
        .panel.panel-default
          .panel-heading
            h3.panel-title Radar Chart
          .panel-content.text-center
            canvas#radarChart.chart(height='380')
          .panel-footer A sample Radar Chart with basic settings


      .col-lg-12.my-5
        .panel.panel-default
          .panel-heading
            h3.panel-title Pie Chart
          .panel-content.text-center
            canvas#pieChart.chart(height='380')
          .panel-footer A sample Pie Chart with basic settings

      .col-lg-12.my-5
        .panel.panel-default
          .panel-heading
            h3.panel-title Doughut Chart
