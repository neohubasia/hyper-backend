div.sidebar.sidebar-hide-to-small.sidebar-shrink.sidebar-gestures
  div.nano
    div.nano-content
      div.logo
        a(href="#")
          span rengvo
      ul
        li.label Main
        if program.menu.dashboard
          li#menu_main.active
            a(href=program.menu.dashboard.url)
              i(class=program.menu.dashboard.icon)
              | #{program.menu.dashboard.title}

        li.label Administrative
        if program.menu.admin && program.menu.admin.submenu.length > 0 
          li#menu_admin
            a.sidebar-sub-toggle
              i(class=program.menu.admin.icon)
              | #{program.menu.admin.title}
              span.badge.badge-primary
              span.sidebar-collapse-icon.ti-angle-down
            each submenu in program.menu.admin.submenu
              ul
                li(id='submenu_'+submenu.name)
                  a(href=submenu.url) #{submenu.title}

        li.label Course
        if program.menu.course && program.menu.course.submenu.length > 0 
          li#menu_course
            a.sidebar-sub-toggle
              i(class=program.menu.course.icon)
              | #{program.menu.course.title}
              span.badge.badge-primary
              span.sidebar-collapse-icon.ti-angle-down
            each submenu in program.menu.course.submenu
              ul
                li(id='submenu_'+submenu.name)
                  a(href=submenu.url) #{submenu.title}