extends ../includes/ly-main

block content
  div.content-wrap
    div.main
      div.container-fluid
        div.row
          div.col-lg-8.p-r-0.title-margin-right
            div.page-header
              div.page-title
                h1 Hello 
                  span Welcome Here
          div.col-lg-4.p-l-0.title-margin-left
            div.page-header
              div.page-title
                ol.breadcrumb
                  li.breadcrumb-item
                    a(href="#") Dashboard
                  li.breadcrumb-item.active Home
        section#main-content
          div.row
            div.col-lg-3
              div.card
                div.stat-widget-two
                    div.stat-content
                      div.stat-text Today Expenses
                      div.stat-digit
                        i.fa.fa-usd 
                        | 8500
                    div.progress
                      div.progress-bar.progress-bar-success.w-85(role="progressbar" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100")
            div.col-lg-3
              div.card
                div.stat-widget-two
                    div.stat-content
                      div.stat-text Income Detail
                      div.stat-digit
                        i.fa.fa-usd 
                        | 7800
                    div.progress
                      div.progress-bar.progress-bar-primary.w-75(role="progressbar" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100")
            div.col-lg-3
              div.card
                div.stat-widget-two
                    div.stat-content
                      div.stat-text New Order
                      div.stat-digit
                        i.fa.fa-shopping-cart
                        | 650
                    div.progress
                      div.progress-bar.progress-bar-danger.w-65(role="progressbar" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100")
            div.col-lg-3
              div.card
                div.stat-widget-two
                    div.stat-content
                      div.stat-text Assign Delivery
                      div.stat-digit
                        i.fa.fa-tasks
                        | 50
                    div.progress
                      div.progress-bar.progress-bar-warning.w-50(role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100")
          div.row
            div.col-lg-8
              div.card
                div.card-body
                  h4.card-title Sales Overview
                  div#morris-bar-chart
            div.col-md-4
              div.card.text-center
                div.m-t-10
                   p Customer Feedback
                   h5 500
                div.widget-card-circle.pr.m-t-20.m-b-20#info-circle-card
                  i.ti-control-shuffle.pa
                ul.widget-line-list.m-b-15
                  li.border-right 92% 
                    br
                    span.color-success
                      i.ti-hand-point-up
                      | Positive
                  li 8%
                    br
                    span.color-danger
                      i.ti-hand-point-down
                      | Negative